<UserControl x:Class="MIC.Try.Controls.DynamicDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MIC.Try.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid x:Name="datagrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Index,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True}" Header="ID" MinWidth="50" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
